{
	"compilerOptions": {
		"declaration": false,
		"target": "es6",
		"module": "commonjs",
		"sourceMap": false,
		"moduleResolution": "node",
		"rootDir": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
    "outDir": "dist/",
		"esModuleInterop": true,
		"resolveJsonModule":true,
		"skipLibCheck":true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist/",
    "node_modules/**/*",
		"test/"
	]
}
